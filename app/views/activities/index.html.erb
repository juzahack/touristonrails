<p id="notice"><%= notice %></p>

<h1>Search plan for today <%= Date.today%></h1>

<%= form_tag(activities_path, :method => "get", id: "search-form") do %>
  <% types_array = User::TYPES.map { |t| [t, t] } %>
  <%= label_tag(:q, "Activity for:") %>
  <%= select_tag(:kind_user, options_for_select(types_array) , prompt: "Select type of user") %>
  <% act_array = Activity::TYPES.map { |t| [t, t] } %>
  <%= label_tag(:q, "Search for:") %>
  <%= select_tag(:category, options_for_select(act_array), multiple: true) %>
  <%#= label_tag(:q, "Search for:") %>
  <%#= text_field_tag :search, params[:search], placeholder: "Search Users" %>
  <%= label_tag(:q, "Max distance in km:") %>
  <%= number_field_tag :km, placeholder: "Max distance in km" %>
  <%= label_tag(:q, "Max cost:") %>
  <%= number_field_tag :cost, placeholder: "Max distance in km" %>
  <%= label_tag(:q, "Weather:") %>
  <%= text_field_tag :weather, "sunny", :readonly => true %>
  <%= submit_tag "Search", :name => nil %>
<% end %>

<h1>Listing Activities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Place</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= activity.description %></td>
        <td><%= activity.place %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%#= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%#= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

