<p id="notice"><%= notice %></p>

<%= form_tag(paths_path, :method => "get", id: "search-form") do %>
  <% types_array = User::TYPES.map { |t| [t, t] } %>
  <%= select_tag(:user, options_for_select(types_array)) %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Users" %>
  <%= submit_tag "Search", :name => nil %>
<% end %>

<h1>Listing Paths</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Place</th>
      <th>Weather</th>
      <th>Type</th>
      <th>Trip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @paths.each do |path| %>
      <tr>
        <td><%= path.date %></td>
        <td><%= path.place %></td>
        <td><%= path.weather %></td>
        <td><%= path.kind %></td>
        <td><%= path.trip %></td>
        <td><%= link_to 'Show', path %></td>
        <td><%= link_to 'Edit', edit_path_path(path) %></td>
        <td><%= link_to 'Destroy', path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

